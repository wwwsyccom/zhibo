<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="tab_menu_rel">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="tab_menu_icon">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="tab_menu_text">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@drawable/nav_text_color</item>
    </style>

    <style name="tab_menu_bgnum">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_menu_bgnum</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="statusBarStyle" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:statusBarColor">@color/blue2</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
