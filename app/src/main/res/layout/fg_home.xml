<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <!--顶部导航-->
    <RelativeLayout
        android:id="@+id/home_nav"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_height="45dp">
        <RadioGroup
            android:id="@+id/nav_group"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <RadioButton
                android:id="@+id/nav_recommend"
                style="@style/fg_home_nav_item"
                android:button="@null"
                android:text="推荐">
            </RadioButton>
            <RadioButton
                android:id="@+id/nav_active"
                style="@style/fg_home_nav_item"
                android:button="@null"
                android:text="活跃">
            </RadioButton>
            <RadioButton
                android:id="@+id/nav_concern"
                style="@style/fg_home_nav_item"
                android:button="@null"
                android:layout_marginRight="0dp"
                android:text="关注">
            </RadioButton>
        </RadioGroup>
    </RelativeLayout>
    <!--内容区-->
    <com.syc.zhibo.util.SwipeRefreshView
        android:id="@+id/list_wrap"
        android:layout_width="match_parent"
        android:layout_below="@id/home_nav"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.syc.zhibo.util.SwipeRefreshView>

    <ProgressBar
        android:id="@+id/probar"
        android:text="android:style/Widget.ProgressBar.Large"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:visibility="gone"/>
</RelativeLayout>
