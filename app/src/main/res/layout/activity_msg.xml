<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ActivityMsg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/fg_my_list_border_bottom"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="柠檬"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="昨天"
            android:background="@drawable/msg_time_back"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                fresco:roundedCornerRadius="7dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:placeholderImage="@mipmap/timg"
                android:layout_height="40dp" />
                <com.syc.zhibo.util.BubbleLinearLayout
                    android:orientation="horizontal"
                    app:arrowWidth="8dp"
                    app:angle="4dp"
                    app:arrowHeight="10dp"
                    app:arrowPosition="15dp"
                    app:arrowLocation="left"
                    app:bubbleColor="#F4F8FB"
                    app:arrowCenter="false"
                    android:id="@+id/bubble_layout"
                    android:layout_width="wrap_content"
                    android:minHeight="40dp"
                    android:layout_height="wrap_content">
                    <!--<ImageView-->
                        <!--android:src="@mipmap/ic_launcher"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_height="wrap_content" />-->
                    <TextView
                        android:textColor="#444444"
                        android:layout_gravity="center_vertical"
                        android:text="你好,你好,你好,你好,"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content" />
                </com.syc.zhibo.util.BubbleLinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textSize="12sp"
            android:text="昨天"
            android:background="@drawable/msg_time_back"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:gravity="right"
            android:layout_height="wrap_content">
            <com.syc.zhibo.util.BubbleLinearLayout
                android:orientation="horizontal"
                app:arrowWidth="8dp"
                app:angle="4dp"
                app:arrowHeight="10dp"
                app:arrowPosition="15dp"
                app:arrowLocation="right"
                app:bubbleColor="@color/colorPrimaryDark"
                app:arrowCenter="false"
                android:layout_width="wrap_content"
                android:minHeight="40dp"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:src="@mipmap/ic_launcher"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_height="wrap_content" />-->
                <TextView
                    android:textColor="@color/white"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:text="你好,你好,你好,你好,"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
            </com.syc.zhibo.util.BubbleLinearLayout>
            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:layout_width="40dp"
                fresco:roundedCornerRadius="7dp"
                fresco:roundTopLeft="true"
                fresco:roundTopRight="true"
                fresco:roundBottomLeft="true"
                fresco:roundBottomRight="true"
                fresco:placeholderImage="@mipmap/timg"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>
    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/nav_border_top"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border_top_right"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:src="@mipmap/detail_gift"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="赠送礼物"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="20dp"
                android:src="@mipmap/video"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:layout_height="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:text="视频聊天"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>