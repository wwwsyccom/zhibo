<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <layer-list>
            <item
                android:left="-3dp"
                android:right="-3dp"
                android:top="-3dp">
                <shape>
                    <solid android:color="#ffffff"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorPrimary"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
